{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile TypeScript",
            "type": "typescript",
            "tsconfig": "tsconfig.json"
        },
        {
            "label": "Build Bundle",
            "type": "shell",
            "command": "rm ../build/${relativeFileDirname}.user.js;java -jar '../compiler.jar' --js *.js --js_output_file ../build/${relativeFileDirname}.user.js;",
            "dependsOn": [
                "Compile TypeScript"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}